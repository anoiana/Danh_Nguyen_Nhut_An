<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFBB33"/> <!-- Checked background color -->
            <stroke
                android:width="1dp"
                android:color="@color/primaryColor"/> <!-- Border when checked -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Unchecked background color -->
            <stroke
                android:width="1dp"
                android:color="@color/primaryColor"/> <!-- Border when unchecked -->
        </shape>
    </item>
</selector>
