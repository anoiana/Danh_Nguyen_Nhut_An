# Application Configuration Template
# Copy this file to application.properties and fill in your actual values
# NEVER commit the actual application.properties file!

spring.application.name=Leaning Vocabulary

# Database Configuration
# For local development, use your local MySQL
# For production, use environment variables
spring.datasource.url=${DATABASE_URL:jdbc:mysql://localhost:3306/learning_vocabulary?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true}
spring.datasource.username=${DATABASE_USERNAME:root}
spring.datasource.password=${DATABASE_PASSWORD:YOUR_DATABASE_PASSWORD_HERE}

# JPA
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Encoding
server.servlet.encoding.charset=UTF-8
server.servlet.encoding.enabled=true

# Port
server.port=${PORT:8080}

# ===========================================
# API KEYS - Get your own keys from:
# ===========================================

# Groq API Key - Get from: https://console.groq.com/keys
groq.api.key=${GROQ_API_KEY:gsk_YOUR_GROQ_API_KEY_HERE}

# Translation API
translation.api.key=${TRANSLATION_API_KEY:YOUR_TRANSLATION_API_KEY_HERE}
translation.api.host=${TRANSLATION_API_HOST:Google-Translation-Unlimited.allthingsdev.co}
translation.api.endpoint=${TRANSLATION_API_ENDPOINT:YOUR_ENDPOINT_HERE}
translation.proxy.url=${TRANSLATION_PROXY_URL:https://Google-Translation-Unlimited.proxy-production.allthingsdev.co/translation/v2/trans}